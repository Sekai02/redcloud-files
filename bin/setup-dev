#!/bin/bash

set -e

echo "Setting up RedCloud Files for local development..."
echo ""

PROJECT_ROOT="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"
cd "$PROJECT_ROOT"

echo "Creating data directories..."
mkdir -p ./data/chunks
echo "  ✓ Created ./data/chunks/"

echo ""
echo "Data directory structure:"
tree -L 2 ./data 2>/dev/null || find ./data -type d 2>/dev/null || echo "  ./data/ (use 'ls -R ./data' to view)"

echo ""
echo "✅ Development environment setup complete!"
echo ""
echo "Next steps:"
echo "  1. Start chunkserver:  ./bin/run-chunkserver"
echo "  2. Start controller:   ./bin/run-controller"
echo "  3. Run CLI:            ./bin/cli"
echo ""
